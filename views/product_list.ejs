<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head.ejs") %>
    
    <title>The Mobile Hour - Phones</title>
  </head>
  <body>
    <main>
      <%- include("partials/header.ejs") %>
      <%- include("partials/nav.ejs") %>
      <form action="product_list" method="get" class="search form">
        <input type="text" name="search_term" id="search-term" placeholder="Iphone14 Pro" />
        <input type="submit" value="Search" />

      </form>

      <section class="mobile-list">
        <% for (let product of products) {%>

        <artile class="mobile-card">
          <img src="<%- product.product_path %>" alt="Phone image" class="image"/>
          <h2><%- product.product_name %></h2>
          <span><%- product.product_price %></span>
          <p><%- product.product_model %></p>
          <a href ="feature_list?id=<%- product.product_id %>">Details</a>
          <a href ="product_checkout?id=<%- product.product_id %>">Buy</a>
          
        </artile>
        <% } %>

      </section>
      <%- include("partials/footer.ejs") %>
    </main>
  </body>

</html>