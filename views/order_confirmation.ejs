<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head.ejs") %>
    <title>Minute Coffee - Order Confirmation</title>
</head>
<body>
    <main>
        <%- include("partials/header.ejs") %> <%- include("partials/nav.ejs") %>
        <section class="checkout-layout">
            <article class="mobile-card">
                <img src="<%- order_with_product.product_path %>" alt="mobile">
                <h2><%= order_with_product.product_name %></h2>
                <p><%= order_with_product.product_description %></p>
            </article>
            <article class="form-grid">
                <label for="time">Order Time:</label>
                <span id="status"><%= order_with_product.order_date.toLocaleString() %></span>
                <label for="name">Order Name:</label>
                <span id="name"><%= order_with_product.order_customer_first_name %></span>
                <label for="status">Order Status:</label>
                <span id="status"><%= order_with_product.order_status %></span>
                <a href="/" class="link-button">Back</a>
                <a href="order_confirmation?id=<%= order_with_product.order_id %>" class="link-button">Refresh</a>
            </article>
        </section>
        <%- include("partials/footer.ejs") %>
    </main>
</body>
</html>