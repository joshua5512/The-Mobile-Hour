<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head.ejs") %>
    <title>
      The Mobile Hour - Checkout
    </title>
  </head>
  <body>
    <main>
      <%- include("partials/header.ejs") %> <%- include("partials/nav.ejs") %>
      <section class="checkout-layout">
        <article class="mobile-card">
         
        
        
            <img src="<%- product.product_path %>" alt="checkout" />
            <h2>
              <%- product.product_name %>
            </h2>
            <span>
              <%- product.product_price %>
            </span>
            <p><%- product.product_model %></p>
        </article>

        <form action ="/create_order" method="post" class="form-grid">
              <input type="hidden" name="product_id" value="<%- product.product_id %>">

              <label for="customer-first-name">First Name:</label>
              <input type="text" name="customer_first_name" id="customer-first-name"> 
              <label for="customer-last-name">Last Name:</label>
              <input type="text" name="customer_last_name" id="customer-last-name"> 
              <label for="customer-address">Address:</label>
              <input type="text" name="customer_address" id="customer-address"> 
              <label for="customer-phone">Phone:</label>
              <input type="tel" name= "customer_phone" id="customer-phone"> 
              <label for="customer-email">Email:</label>
              <input type="email" name= "customer_email" id="customer-email"> 
              
              <a href="/" class="link-button">Back</a>
              <input type="submit" value="Pay" />
             
        </form>
        
      </section>
      <%- include("partials/footer.ejs") %>
    </main>
  </body>

</html>