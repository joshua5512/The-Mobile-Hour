<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("partials/head.ejs") %>
        <title>Mobile Hour- Product Admin</title>
    </head>
    <body>
        <main>
            <%- include("partials/header.ejs") %> <%-
            include("partials/admin_nav.ejs", {role: role}) %>
            <section class="half-half-layout">
                <section class="cols-6 data-list">
                    <span class="data-list-heading">Name</span>
                    <span class="data-list-heading">Model</span>
                    <span class="data-list-heading">Manufacture</span>
                    <span class="data-list-heading">Price</span>
                    <span class="data-list-heading">Stock</span>
                    <span class="data-list-heading">Edit</span>
                    
                   
                    <% for (let product of products) { %>
                      
                    <span><%= product.product_name %></span>
                    <span><%= product.product_model %></span>
                 
                    <span><%= product.product_manufacturer %></span>
                    <span><%= product.product_price %></span>
                    <span><%= product.product_stock %></span>
                  
                    <a
                        href="/product_admin?edit_id=<%= product.product_id %>"
                        class="link-button"
                        >Edit</a
                    >
                    <% } %>
                </section>
                <form action="/edit_product" method="post" class="form-grid">
                    <input
                        type="hidden"
                        name="product_id"
                        value="<%= edit_product.product_id %>"
                    />
                    <label for="name">Name:</label>
                    <input
                        type="text"
                        name="name"
                        id="name"
                        value="<%= edit_product.product_name %>"
                    /> 
                    <label for="name">Model:</label>
                    <input
                        type="text"
                        name="model"
                        id="model"
                        value="<%= edit_product.product_model %>"
                    />
                    <label for="name">Manufacturer:</label>
                    <input
                        type="text"
                        name="manufacturer"
                        id="manufacturer"
                        value="<%= edit_product.product_manufacturer %>"
                    />
                    <label for="name">Price:</label>
                    <input
                        type="text"
                        name="price"
                        id="price"
                        value="<%= edit_product.product_price %>"
                    />
                    <label for="stock">Stock:</label>
                    <input
                        type="text"
                        name="stock"
                        id="stock"
                        value="<%= edit_product.product_stock %>"
                    />
                   
                    <!-- features -->
             
                    <label for="weight">Weight_grams:</label>
                    <input
                        type="text"
                        name="weight"
                        id="weight"
                        value="<%= edit_product.feature_weight_grams %>"
                    />
                    <label for="height">height:</label>
                    <input
                        type="text"
                        name="height"
                        id="height"
                        value="<%= edit_product.feature_height_mm %>"
                    />
                    <label for="width">width:</label>
                    <input
                        type="text"
                        name="width"
                        id="width"
                        value="<%= edit_product.feature_width_mm %>"
                    />
                    <label for="depth">depth:</label>
                    <input
                        type="text"
                        name="depth"
                        id="depth"
                        value="<%= edit_product.feature_depth_mm %>"
                    />
                    <label for="system">Operating system:</label>
                    <input
                        type="text"
                        name="system"
                        id="system"
                        value="<%= edit_product.feature_operating_system %>"
                    />
                    <label for="size">Screen size:</label>
                    <input
                        type="text"
                        name="size"
                        id="size"
                        value="<%= edit_product.feature_screen_size %>"
                    />
                    <label for="resolution">Screen resolution:</label>
                    <input
                        type="text"
                        name="resolution"
                        id="resolution"
                        value="<%= edit_product.feature_screen_resolution %>"
                    />
                    <label for="cpu">CPU:</label>
                    <input
                        type="text"
                        name="cpu"
                        id="cpu"
                        value="<%= edit_product.feature_cpu %>"
                    />
                    <label for="ram">RAM:</label>
                    <input
                        type="text"
                        name="ram"
                        id="ram"
                        value="<%= edit_product.feature_ram %>"
                    />
                    <label for="storage">Storage:</label>
                    <input
                        type="text"
                        name="storage"
                        id="storage"
                        value="<%= edit_product.feature_storage %>"
                    />
                    <label for="battery">Battery:</label>
                    <input
                        type="text"
                        name="battery"
                        id="battery"
                        value="<%= edit_product.feature_battery %>"
                    />
                    <label for="rear">Rear camera:</label>
                    <input
                        type="text"
                        name="rear"
                        id="rear"
                        value="<%= edit_product.feature_rear_camera %>"
                    />
                    <label for="front">Front camera:</label>
                    <input
                        type="text"
                        name="front"
                        id="front"
                        value="<%= edit_product.feature_front_camera %>"
                    />



                    <input type="submit" name="action" value="delete" />
                    <% if (edit_product.product_id == "0") { %>
                    <input type="submit" name="action" value="create" />
                    <% } else { %>
                    <input type="submit" name="action" value="update" />
                    <% } %>
                </form>
            </section>
            <%- include("partials/footer.ejs") %>
        </main>
    </body>
</html>
